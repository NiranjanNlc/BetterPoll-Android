<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:padding="6dp"
            app:srcCompat="@drawable/ic_baseline_person_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aditya Bisht"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:id="@+id/name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted on 17/11/2022"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:layout_below="@+id/name"
            android:textStyle="normal"
            android:layout_toEndOf="@+id/imageView"
            android:id="@+id/postDate"
            />

        <TextView
            android:id="@+id/postContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postDate"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imageView"
            android:text="Food was horrible didnt likeit a slwefweufgwougfywgwyegfewygfewgfufgugfugfgfwfwgweugwe7gfewgfweggfuwggwguwegfouwebkhkhfbog"
            android:textSize="15sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>